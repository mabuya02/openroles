<% content_for :title, "My Profile" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="page-title-box d-sm-flex align-items-center justify-content-between">
        <h4 class="mb-sm-0">My Profile</h4>
        <div class="page-title-right">
          <%= link_to "Edit Profile", edit_profile_path, class: "btn btn-primary", data: { turbo: false } %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- Profile Overview -->
    <div class="col-xl-4">
      <div class="card">
        <div class="card-body">
          <div class="text-center">
            <% if @user_profile.profile_picture.attached? %>
              <div class="position-relative d-inline-block">
                <%= image_tag @user_profile.profile_picture, class: "rounded-circle avatar-lg mb-3", alt: "Profile Picture" %>
                <%= button_to remove_attachment_profile_path, 
                    method: :delete,
                    params: { attachment_id: @user_profile.profile_picture.id, attachment_type: 'profile_picture' },
                    class: "btn btn-sm btn-outline-danger position-absolute top-0 end-0 rounded-circle",
                    style: "width: 30px; height: 30px; padding: 0; font-size: 12px;",
                    data: { confirm: "Are you sure you want to delete your profile picture?" },
                    title: "Delete profile picture" do %>
                  <i class="iconoir-trash"></i>
                <% end %>
              </div>
            <% else %>
              <div class="avatar-lg rounded-circle bg-light d-flex align-items-center justify-content-center mb-3 mx-auto">
                <i class="iconoir-user text-muted" style="font-size: 48px;"></i>
              </div>
            <% end %>
            
            <h5 class="mb-1"><%= current_user.full_name %></h5>
            
            <% if current_user.email.present? %>
              <p class="text-muted mb-0">
                <i class="iconoir-mail me-1"></i>
                <%= current_user.email %>
                <% unless current_user.email_verified? %>
                  <span class="badge bg-warning ms-1">Unverified</span>
                <% end %>
              </p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Contact Information -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Contact Information</h5>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-borderless mb-0">
              <tbody>
                <tr>
                  <td class="ps-0 fw-medium">Phone:</td>
                  <td class="text-muted">
                    <%= current_user.phone_number.present? ? current_user.phone_number_formatted : "Not provided" %>
                  </td>
                </tr>
                <tr>
                  <td class="ps-0 fw-medium">Portfolio:</td>
                  <td class="text-muted">
                    <% if @user_profile.portfolio_url.present? %>
                      <%= link_to @user_profile.portfolio_url, @user_profile.portfolio_url, target: "_blank", class: "text-decoration-none" %>
                    <% else %>
                      Not provided
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td class="ps-0 fw-medium">LinkedIn:</td>
                  <td class="text-muted">
                    <% if @user_profile.linkedin_url.present? %>
                      <%= link_to @user_profile.linkedin_url, @user_profile.linkedin_url, target: "_blank", class: "text-decoration-none" %>
                    <% else %>
                      Not provided
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td class="ps-0 fw-medium">GitHub:</td>
                  <td class="text-muted">
                    <% if @user_profile.github_url.present? %>
                      <%= link_to @user_profile.github_url, @user_profile.github_url, target: "_blank", class: "text-decoration-none" %>
                    <% else %>
                      Not provided
                    <% end %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Profile Details -->
    <div class="col-xl-8">
      <!-- About Section -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">About</h5>
        </div>
        <div class="card-body">
          <% if @user_profile.bio.present? %>
            <p class="text-muted mb-0"><%= simple_format(@user_profile.bio) %></p>
          <% else %>
            <p class="text-muted mb-0">No bio provided. <%= link_to "Add one", edit_profile_path, class: "text-decoration-none", data: { turbo: false } %> to tell others about yourself.</p>
          <% end %>
        </div>
      </div>

      <!-- Professional Information -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Professional Information</h5>
        </div>
        <div class="card-body">
          <% if @user_profile.skills.present? %>
            <div class="mb-3">
              <label class="form-label fw-medium">Skills</label>
              <p class="text-muted mb-0"><%= @user_profile.skills %></p>
            </div>
          <% else %>
            <p class="text-muted mb-0">No skills listed. <%= link_to "Add skills", edit_profile_path, class: "text-decoration-none", data: { turbo: false } %> to showcase your expertise.</p>
          <% end %>
        </div>
      </div>

      <!-- Resume and Documents -->
      <div class="card">
        <div class="card-header">
          <h5 class="card-title mb-0">Documents</h5>
        </div>
        <div class="card-body">
          <!-- Resume Section -->
          <div class="mb-4">
            <h6 class="fw-medium mb-3">Resume</h6>
            <% if @user_profile.resume.attached? %>
              <div class="document-card border rounded p-3 mb-2">
                <div class="d-flex align-items-center justify-content-between">
                  <div class="d-flex align-items-center">
                    <div class="document-icon me-3">
                      <i class="iconoir-page text-danger" style="font-size: 2rem;"></i>
                    </div>
                    <div>
                      <h6 class="mb-1 fw-medium"><%= @user_profile.resume.filename %></h6>
                      <small class="text-muted">
                        <%= number_to_human_size(@user_profile.resume.byte_size) %> â€¢ 
                        Uploaded <%= time_ago_in_words(@user_profile.resume.created_at) %> ago
                      </small>
                    </div>
                  </div>
                  <div class="document-actions">
                    <%= link_to "#", 
                        class: "btn btn-outline-primary btn-sm me-2 view-document-btn", 
                        data: { document_url: rails_blob_path(@user_profile.resume), document_title: @user_profile.resume.filename } do %>
                      <i class="iconoir-eye me-1"></i> View
                    <% end %>
                    <%= link_to rails_blob_path(@user_profile.resume, disposition: "attachment"), 
                        class: "btn btn-primary btn-sm me-2" do %>
                      <i class="iconoir-download me-1"></i> Download
                    <% end %>
                    <button type="button" class="btn btn-outline-danger btn-sm" 
                        onclick="deleteAttachment('<%= remove_attachment_profile_path %>?attachment_id=<%= @user_profile.resume.id %>&attachment_type=resume', 'Are you sure you want to delete this resume?')">
                      <i class="iconoir-trash"></i>
                    </button>
                  </div>
                </div>
              </div>
            <% else %>
              <div class="text-center py-4 border rounded bg-light">
                <i class="iconoir-page text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mb-0">No resume uploaded</p>
                <%= link_to "Upload Resume", edit_profile_path, class: "btn btn-sm btn-outline-primary mt-2", data: { turbo: false } %>
              </div>
            <% end %>
          </div>

          <!-- Certificates Section -->
          <div class="mb-4">
            <h6 class="fw-medium mb-3">Certificates</h6>
            <% if @user_profile.certificates.attached? %>
              <div class="row">
                <% @user_profile.certificates.each_with_index do |certificate, index| %>
                  <div class="col-md-6 mb-3">
                    <div class="document-card border rounded p-3">
                      <div class="d-flex align-items-start">
                        <div class="document-icon me-3">
                          <i class="iconoir-medal text-warning" style="font-size: 2rem;"></i>
                        </div>
                        <div class="flex-grow-1">
                          <h6 class="mb-1 fw-medium"><%= truncate(certificate.filename.to_s, length: 25) %></h6>
                          <small class="text-muted d-block mb-2">
                            <%= number_to_human_size(certificate.byte_size) %>
                          </small>
                          <div class="btn-group btn-group-sm">
                            <%= link_to "#", 
                                class: "btn btn-outline-primary btn-sm view-document-btn", 
                                data: { document_url: rails_blob_path(certificate), document_title: certificate.filename } do %>
                              <i class="iconoir-eye"></i>
                            <% end %>
                            <%= link_to rails_blob_path(certificate, disposition: "attachment"), 
                                class: "btn btn-primary btn-sm" do %>
                              <i class="iconoir-download"></i>
                            <% end %>
                            <button type="button" class="btn btn-outline-danger btn-sm" 
                                onclick="deleteAttachment('<%= remove_attachment_profile_path %>?attachment_id=<%= certificate.id %>&attachment_type=certificate', 'Are you sure you want to delete <%= certificate.filename %>?')">
                              <i class="iconoir-trash"></i>
                            </button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="text-center py-4 border rounded bg-light">
                <i class="iconoir-medal text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mb-0">No certificates uploaded</p>
                <%= link_to "Upload Certificates", edit_profile_path, class: "btn btn-sm btn-outline-primary mt-2", data: { turbo: false } %>
              </div>
            <% end %>
          </div>

          <!-- Portfolio Files Section -->
          <% if @user_profile.portfolio_files.attached? %>
            <div class="mb-4">
              <h6 class="fw-medium mb-3">Portfolio Files</h6>
              <div class="row">
                <% @user_profile.portfolio_files.each do |file| %>
                  <div class="col-md-4 mb-3">
                    <div class="document-card border rounded p-3">
                      <div class="text-center">
                        <div class="document-icon mb-2">
                          <% if file.content_type&.start_with?('image/') %>
                            <i class="iconoir-media-image text-success" style="font-size: 2.5rem;"></i>
                          <% elsif file.content_type == 'application/pdf' %>
                            <i class="iconoir-page text-danger" style="font-size: 2.5rem;"></i>
                          <% else %>
                            <i class="iconoir-page text-info" style="font-size: 2.5rem;"></i>
                          <% end %>
                        </div>
                        <h6 class="mb-1 fw-medium"><%= truncate(file.filename.to_s, length: 15) %></h6>
                        <small class="text-muted d-block mb-2">
                          <%= number_to_human_size(file.byte_size) %>
                        </small>
                        <div class="btn-group btn-group-sm">
                          <%= link_to "#", 
                              class: "btn btn-outline-primary btn-sm view-document-btn", 
                              data: { document_url: rails_blob_path(file), document_title: file.filename } do %>
                            <i class="iconoir-eye"></i>
                          <% end %>
                          <%= link_to rails_blob_path(file, disposition: "attachment"), 
                              class: "btn btn-primary btn-sm" do %>
                            <i class="iconoir-download"></i>
                          <% end %>
                          <button type="button" class="btn btn-outline-danger btn-sm" 
                              onclick="deleteAttachment('<%= remove_attachment_profile_path %>?attachment_id=<%= file.id %>&attachment_type=portfolio_file', 'Are you sure you want to delete <%= file.filename %>?')">
                            <i class="iconoir-trash"></i>
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="mb-4">
              <h6 class="fw-medium mb-3">Portfolio Files</h6>
              <div class="text-center py-4 border rounded bg-light">
                <i class="iconoir-folder text-muted" style="font-size: 3rem;"></i>
                <p class="text-muted mb-0">No portfolio files uploaded</p>
                <%= link_to "Upload Portfolio Files", edit_profile_path, class: "btn btn-sm btn-outline-primary mt-2", data: { turbo: false } %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Document Modal -->
<div class="modal fade" id="documentModal" tabindex="-1" aria-labelledby="documentModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-fullscreen-lg-down modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="documentModalLabel">Document Viewer</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body p-0">
        <div id="documentViewer" class="text-center">
          <div class="p-5">
            <div class="spinner-border text-primary" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3 text-muted">Loading document...</p>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <a href="#" id="downloadDocumentBtn" class="btn btn-primary" target="_blank">
          <i class="iconoir-download me-1"></i> Download
        </a>
      </div>
    </div>
  </div>
</div>

<style>
/* Document Cards Styling */
.document-card {
  transition: all 0.3s ease;
  border: 1px solid #e3e6f0 !important;
}

.document-card:hover {
  box-shadow: 0 0.15rem 1.75rem rgba(33, 40, 50, 0.15);
  border-color: #d1d3e2 !important;
}

.document-icon i {
  transition: transform 0.2s ease;
}

.document-card:hover .document-icon i {
  transform: scale(1.1);
}

.document-actions .btn {
  transition: all 0.2s ease;
}

.btn-group-sm > .btn, .btn-sm {
  padding: 0.25rem 0.5rem;
  font-size: 0.75rem;
}

/* Modal Styling */
#documentModal .modal-content {
  border: none;
  box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175);
}

#documentModal .modal-xl {
  max-width: 95vw;
}

#documentViewer {
  min-height: 75vh;
  background-color: #f8f9fa;
}

#documentViewer iframe {
  width: 100%;
  height: 80vh;
  border: none;
  border-radius: 8px;
}

/* PDF specific styling */
.pdf-container {
  position: relative;
  width: 100%;
  height: 80vh;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
}

.pdf-toolbar {
  position: absolute;
  top: 10px;
  right: 10px;
  z-index: 10;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 6px;
  padding: 4px;
  backdrop-filter: blur(10px);
}

#documentViewer img {
  max-width: 100%;
  height: auto;
  max-height: 70vh;
  object-fit: contain;
}

/* Empty state styling */
.bg-light {
  background-color: #f8f9fc !important;
}

/* Button group improvements */
.btn-group .btn {
  border-radius: 0.375rem;
}

.btn-group .btn:not(:last-child) {
  margin-right: 0.25rem;
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .document-actions {
    margin-top: 1rem;
  }
  
  .document-actions .btn {
    display: block;
    width: 100%;
    margin-bottom: 0.5rem;
  }
  
  .document-actions .btn:last-child {
    margin-bottom: 0;
  }
  
  .btn-group {
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  
  .btn-group .btn {
    margin-right: 0;
    margin-bottom: 0.25rem;
  }
  
  .btn-group .btn:last-child {
    margin-bottom: 0;
  }
}
</style>

<script>
// Function to wait for Bootstrap to be available
function waitForBootstrap(callback, maxAttempts = 50) {
  let attempts = 0;
  
  function checkBootstrap() {
    if (typeof bootstrap !== 'undefined' && bootstrap.Modal) {
      callback();
    } else if (attempts < maxAttempts) {
      attempts++;
      setTimeout(checkBootstrap, 100);
    } else {
      console.error('Bootstrap failed to load after maximum attempts');
    }
  }
  
  checkBootstrap();
}

document.addEventListener('DOMContentLoaded', function() {
  waitForBootstrap(function() {
    console.log('Bootstrap is available, initializing modal...');
    
    const documentModalElement = document.getElementById('documentModal');
    const documentViewer = document.getElementById('documentViewer');
    const downloadBtn = document.getElementById('downloadDocumentBtn');
    const modalTitle = document.getElementById('documentModalLabel');

    if (!documentModalElement) {
      console.error('Document modal not found');
      return;
    }

    // Initialize the modal
    let documentModal;
    try {
      documentModal = new bootstrap.Modal(documentModalElement);
      console.log('Modal initialized successfully');
    } catch (error) {
      console.error('Failed to initialize modal:', error);
      return;
    }

    // Handle view document button clicks
    document.querySelectorAll('.view-document-btn').forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        
        const documentUrl = this.getAttribute('data-document-url');
        const documentTitle = this.getAttribute('data-document-title');
        
        console.log('Opening document:', documentTitle, documentUrl);
        
        if (documentUrl && documentTitle) {
          modalTitle.textContent = documentTitle;
          downloadBtn.href = documentUrl + '?disposition=attachment';
          
          // Clear previous content and show loading
          documentViewer.innerHTML = '<div class="p-5 text-center"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div><p class="mt-3 text-muted">Loading document...</p></div>';
          
          // Show the modal
          try {
            documentModal.show();
            console.log('Modal shown successfully');
          } catch (error) {
            console.error('Failed to show modal:', error);
            return;
          }
          
          // Determine file type and display accordingly
          const fileExtension = documentTitle.split('.').pop().toLowerCase();
          
          setTimeout(() => {
            if (['jpg', 'jpeg', 'png', 'gif', 'webp', 'svg'].includes(fileExtension)) {
              // Display image
              documentViewer.innerHTML = `<div class="text-center p-3"><img src="${documentUrl}" alt="${documentTitle}" class="img-fluid" style="max-height: 70vh; object-fit: contain;"></div>`;
            } else if (fileExtension === 'pdf') {
              // Display PDF with optimized viewer
              documentViewer.innerHTML = `
                <div class="pdf-container">
                  <iframe src="${documentUrl}#toolbar=1&navpanes=1&scrollbar=1&zoom=page-fit" 
                          type="application/pdf" 
                          width="100%" 
                          height="100%" 
                          style="border: none;">
                    <div class="p-5 text-center">
                      <i class="iconoir-page text-muted" style="font-size: 4rem;"></i>
                      <h5 class="mt-3">PDF Viewer Not Supported</h5>
                      <p class="text-muted">Your browser does not support inline PDF viewing.</p>
                      <a href="${documentUrl}" target="_blank" class="btn btn-primary">
                        <i class="iconoir-external-link me-1"></i> Open PDF in New Tab
                      </a>
                    </div>
                  </iframe>
                  <div class="pdf-toolbar">
                    <a href="${documentUrl}" target="_blank" class="btn btn-sm btn-primary" title="Open in new tab">
                      <i class="iconoir-external-link"></i>
                    </a>
                  </div>
                </div>
              `;
            } else {
              // For other file types, show download option
              documentViewer.innerHTML = `
                <div class="p-5 text-center">
                  <i class="iconoir-page text-muted" style="font-size: 4rem;"></i>
                  <h5 class="mt-3">${documentTitle}</h5>
                  <p class="text-muted">This file type cannot be previewed. Click download to view the file.</p>
                  <a href="${documentUrl}?disposition=attachment" class="btn btn-primary">
                    <i class="iconoir-download me-1"></i> Download File
                  </a>
                </div>
              `;
            }
          }, 300);
        }
      });
    });
  });
});

// Function to delete attachments
function deleteAttachment(url, message) {
  if (confirm(message)) {
    fetch(url, {
      method: 'DELETE',
      headers: {
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content'),
        'Content-Type': 'application/json',
        'Accept': 'application/json'
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        // Redirect to show the updated profile with flash message
        window.location.href = data.redirect_url;
      } else {
        alert('Error: ' + data.message);
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('Error deleting attachment. Please try again.');
    });
  }
}
</script>
