<header id="page-topbar">
  <div class="navbar-header container-fluid position-relative">
    <div class="d-flex align-items-center justify-content-between w-100">
      <!-- Left-aligned elements -->
      <div class="d-flex align-items-center position-relative">
        <!-- LOGO -->
        <div class="navbar-brand-box ">
          <%= link_to root_path, class: "logo d-flex align-items-center", data: { turbo: false } do %>
            <span class="logo-sm d-lg-none">
              <%= image_tag "logo-sm.svg", alt: "OpenRoles", height: "32", class: "me-2" %>
            </span>
            <span class="logo-lg d-none d-lg-flex align-items-center">
              <%= image_tag "logo-sm.svg", alt: "OpenRoles", height: "32", class: "me-2" %>
              <span class="logo-txt fw-bold text-dark">OpenRoles</span>
            </span>
          <% end %>
        </div>

        <button type="button" class="btn btn-sm px-3 font-size-16 d-lg-none header-item waves-effect waves-light" data-bs-toggle="collapse" data-bs-target="#topnav-menu-content" aria-controls="topnav-menu-content" aria-expanded="false" aria-label="Toggle navigation">
          <i class="iconoir-menu icon-md"></i>
        </button>

        <!-- Mobile Navigation Menu -->
        <nav class="navbar navbar-light navbar-expand-lg topnav-menu d-lg-none position-absolute" data-controller="mobile-nav" style="top: 100%; left: 0; right: 0; z-index: 1000;">
          <div class="collapse navbar-collapse" id="topnav-menu-content">
            <ul class="navbar-nav w-100">
              <li class="nav-item">
                <%= link_to jobs_path, class: "nav-link d-flex align-items-center", data: { turbo: false } do %>
                  <i class="iconoir-briefcase icon-md me-3"></i><span>Browse Jobs</span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to companies_path, class: "nav-link d-flex align-items-center", data: { turbo: false } do %>
                  <i class="iconoir-building icon-md me-3"></i><span>Companies</span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to remote_jobs_path, class: "nav-link d-flex align-items-center", data: { turbo: false } do %>
                  <i class="iconoir-wifi icon-md me-3"></i><span>Remote Jobs</span>
                <% end %>
              </li>
            </ul>
          </div>
        </nav>
      </div>

      <!-- Center Navigation Menu - Desktop Only -->
      <div class="d-none d-lg-flex justify-content-center flex-grow-1">
        <nav class="navbar navbar-light navbar-expand-lg topnav-menu">
          <div class="navbar-collapse" id="topnav-menu-content-desktop">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to jobs_path, class: "nav-link px-4 py-2 mx-2 rounded-3 text-center fw-medium", style: "min-width: 120px;", data: { turbo: false } do %>
                  <i class="iconoir-briefcase me-1"></i>Browse Jobs
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to companies_path, class: "nav-link px-4 py-2 mx-2 rounded-3 text-center fw-medium", style: "min-width: 120px;", data: { turbo: false } do %>
                  <i class="iconoir-building me-1"></i>Companies
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to remote_jobs_path, class: "nav-link px-4 py-2 mx-2 rounded-3 text-center fw-medium", style: "min-width: 120px;", data: { turbo: false } do %>
                  <i class="iconoir-wifi me-1"></i>Remote Jobs
                <% end %>
              </li>
            </ul>
          </div>
        </nav>
      </div>

      <!-- Right-aligned elements -->
      <div class="d-flex align-items-center">
        <% if user_signed_in? %>
          <!-- Authenticated User Menu -->
          <div class="dropdown d-inline-block" data-controller="logout">
            <button type="button" class="btn header-item bg-light-subtle border-start border-end d-flex align-items-center" id="page-header-user-dropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if current_user.user_profile&.profile_picture&.attached? %>
                <%= image_tag current_user.user_profile.profile_picture, class: "rounded-circle header-profile-user me-2", alt: "Profile Picture", height: "32", width: "32", style: "object-fit: cover;" %>
              <% else %>
                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                  <i class="iconoir-user" style="font-size: 18px; color: #6c757d;"></i>
                </div>
              <% end %>
              <span class="d-none d-xl-inline-block fw-medium">
                <%= current_user.first_name %>
                <% if current_user.last_name.present? %>
                  <%= current_user.last_name.first %>
                <% end %>.
              </span>
            </button>
            <div class="dropdown-menu dropdown-menu-end">
              <h6 class="dropdown-header">
                <%= current_user.full_name %>
                <% unless current_user.email_verified? %>
                  <span class="badge bg-warning ms-1">Unverified</span>
                <% end %>
              </h6>
              <%= link_to profile_path, class: "dropdown-item d-flex align-items-center" do %>
                <i class="mdi mdi-face-man icon-md me-2"></i> Profile
              <% end %>
              <%= link_to alerts_path, class: "dropdown-item d-flex align-items-center" do %>
                <i class="mdi mdi-bell-outline icon-md me-2"></i> Job Alerts
              <% end %>
              <% unless current_user.email_verified? %>
                <div class="dropdown-divider"></div>
                <%= link_to auth_resend_email_path, method: :post, class: "dropdown-item d-flex align-items-center", data: { confirm: "Resend email verification?" } do %>
                  <i class="mdi mdi-email-outline icon-md me-2"></i> Verify Email
                <% end %>
              <% end %>
              <div class="dropdown-divider"></div>
              <%= link_to auth_logout_confirmation_path, class: "dropdown-item d-flex align-items-center logout-link", data: { 
                turbo: false
              } do %>
                <i class="mdi mdi-logout icon-md me-2"></i> Logout
              <% end %>
            </div>
          </div>
        <% else %>
          <!-- Guest User Menu -->
          <div class="d-flex align-items-center gap-2">
            <%= link_to auth_new_session_path, class: "btn btn-outline-primary btn-sm", data: { turbo: false } do %>
              <i class="mdi mdi-login icon-md me-1"></i> Sign In
            <% end %>
            <%= link_to auth_new_registration_path, class: "btn btn-primary btn-sm", data: { turbo: false } do %>
              <i class="mdi mdi-account-plus icon-md me-1"></i> Sign Up
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>

<style>
/* General icon styling */
.icon-md {
  font-size: 1.125rem; /* Medium size for icons */
  width: 1.125rem;
  height: 1.125rem;
  line-height: 1;
}
.icon-xl {
  font-size: 1.375rem; /* Larger size for header icons */
  width: 1.375rem;
  height: 1.375rem;
  line-height: 1;
}

/* Logo styling */
.navbar-brand-box .logo {
  text-decoration: none;
}
.logo-txt {
  font-size: 1.25rem;
  font-weight: 600;
  color: #495057;
  transition: color 0.2s ease;
}
.logo:hover .logo-txt {
  color: #007bff;
}

/* Ensure all navbar icons have consistent sizing and alignment */
.navbar-nav .nav-link {
  display: flex;
  align-items: center;
  padding: 0.5rem 1rem;
  transition: all 0.2s ease;
}

.navbar-nav .nav-link i {
  font-size: 1.125rem;
  width: 1.125rem;
  margin-right: 0.5rem;
  text-align: center;
  flex-shrink: 0;
}

.navbar-nav .nav-link:hover {
  background-color: rgba(0, 123, 255, 0.1);
  border-radius: 0.375rem;
}

/* Header action buttons */
.header-item {
  border: none;
  background: transparent;
  padding: 0.5rem;
  border-radius: 0.375rem;
  transition: all 0.2s ease;
}

.header-item:hover {
  background-color: rgba(0, 0, 0, 0.05);
}

.header-item i {
  font-size: 1.25rem;
  width: 1.25rem;
  height: 1.25rem;
  line-height: 1;
  color: #6c757d;
}

/* Mobile menu toggle button */
.btn.header-item .fa-bars {
  font-size: 1.125rem;
  color: #495057;
}

/* Profile section styling */
.header-profile-user {
  width: 32px;
  height: 32px;
  object-fit: cover;
}

/* Notification badge */
.noti-icon {
  position: relative;
}

.noti-icon .badge {
  position: absolute;
  top: -4px;
  right: -4px;
  font-size: 0.625rem;
  padding: 0.2em 0.35em;
  min-width: 1.2em;
  border-radius: 50%;
}

/* Dropdown styling improvements */
.dropdown-item {
  display: flex;
  align-items: center;
  padding: 0.5rem 1rem;
  transition: background-color 0.2s ease;
}

.dropdown-item i {
  font-size: 1rem;
  width: 1rem;
  margin-right: 0.75rem;
  text-align: center;
  flex-shrink: 0;
  color: #6c757d;
}

.dropdown-item:hover {
  background-color: #f8f9fa;
}

/* Language flag images */
#header-lang-img {
  width: 20px;
  height: 15px;
  object-fit: cover;
  border-radius: 2px;
}

.language img {
  width: 20px;
  height: 15px;
  object-fit: cover;
  border-radius: 2px;
}

/* Brand images in dropdown */
.dropdown-icon-item img {
  width: 24px;
  height: 24px;
  object-fit: contain;
}

/* Navigation link icons and text spacing */
.nav-link i, .nav-link span {
  display: inline-flex;
  align-items: center;
}
.nav-link i {
  margin-right: 0.75rem; /* Space between icon and text */
}

/* Right-aligned header items */
.header-item i, .header-item img, .header-item span {
  display: inline-flex;
  align-items: center;
}
.header-item i, .header-item img {
  margin-right: 0.5rem; /* Space between icon/image and text */
}

/* Dropdown items */
.dropdown-item i, .dropdown-item img, .dropdown-item span {
  display: inline-flex;
  align-items: center;
}
.dropdown-item i, .dropdown-item img {
  margin-right: 0.75rem; /* Consistent spacing in dropdowns */
}

/* Notification items */
.notification-item i, .notification-item img {
  margin-right: 0.75rem;
}

/* Mobile-specific adjustments */
@media (max-width: 991px) {
  /* Mobile navigation dropdown styling */
  .d-lg-none.topnav-menu .navbar-collapse {
    background-color: #fff;
    border: 1px solid #e3e6f0;
    border-radius: 0.5rem;
    box-shadow: 0 0.15rem 1.75rem rgba(33, 40, 50, 0.15);
    margin-top: 0.5rem;
    padding: 0.5rem 0;
    max-height: 70vh;
    overflow-y: auto;
  }

  /* Mobile nav items with proper icon alignment */
  .d-lg-none .navbar-nav .nav-link {
    display: flex;
    align-items: center;
    padding: 0.75rem 1.25rem;
    color: #5a5c69;
    border-bottom: 1px solid #f8f9fc;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .d-lg-none .navbar-nav .nav-link:hover {
    background-color: #f8f9fc;
    color: #3a3b45;
  }

  .d-lg-none .navbar-nav .nav-link:last-child {
    border-bottom: none;
  }

  /* Ensure icons are properly aligned with text */
  .d-lg-none .nav-link i {
    width: 1.25rem;
    height: 1.125rem;
    text-align: center;
    margin-right: 0.75rem;
    flex-shrink: 0;
    color: #858796;
    font-size: 1.125rem;
  }

  /* Mobile dropdown items styling */
  .d-lg-none .dropdown-menu {
    position: static !important;
    width: 100%;
    box-shadow: none;
    background-color: #f8f9fc;
    border: none;
    border-radius: 0;
    padding: 0;
    margin: 0;
  }

  .d-lg-none .dropdown-item {
    padding: 0.5rem 2rem;
    color: #6e707e;
    font-size: 0.9rem;
    border-bottom: 1px solid #eaecf4;
    transition: all 0.2s ease;
  }

  .d-lg-none .dropdown-item:hover {
    background-color: #eaecf4;
    color: #5a5c69;
  }

  .d-lg-none .dropdown-item:last-child {
    border-bottom: none;
  }

  /* Hide arrow indicators on mobile */
  .d-lg-none .arrow-down {
    display: none;
  }

  /* Adjust logo for mobile */
  .navbar-brand-box {
    margin-right: 1rem;
  }

  .logo-txt {
    font-size: 1.1rem;
  }

  /* Mobile header adjustments */
  .header-item i {
    font-size: 1.125rem;
    color: #5a5c69;
  }

  /* Mobile flag dropdown */
  .dropdown-menu-end {
    right: 0;
    left: auto;
  }
}

/* Desktop-specific adjustments */
@media (min-width: 992px) {
  /* Desktop navigation styling */
  .navbar-nav .nav-link {
    padding: 0.75rem 1rem;
    margin: 0 0.25rem;
    border-radius: 0.375rem;
    font-weight: 500;
    color: #5a5c69;
  }

  .navbar-nav .nav-link:hover {
    color: #3a3b45;
    background-color: rgba(0, 123, 255, 0.08);
  }

  /* Dropdown menu styling for desktop */
  .dropdown-menu {
    border: 1px solid #e3e6f0;
    box-shadow: 0 0.15rem 1.75rem rgba(33, 40, 50, 0.15);
    border-radius: 0.5rem;
    padding: 0.5rem 0;
  }

  /* Mega dropdown menu */
  .mega-dropdown-menu-xl {
    min-width: 600px;
    padding: 1.5rem;
  }

  .menu-title {
    font-weight: 600;
    color: #5a5c69;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.5rem;
    padding: 0 0.75rem;
  }

  /* Header right section spacing */
  .d-flex.align-items-center > .dropdown {
    margin-left: 0.5rem;
  }

  /* Profile dropdown styling */
  #page-header-user-dropdown {
    padding: 0.5rem 1rem;
    background-color: rgba(248, 249, 252, 0.8);
    border: 1px solid #e3e6f0;
    border-radius: 0.5rem;
  }

  #page-header-user-dropdown:hover {
    background-color: #f8f9fc;
    border-color: #d1d3e2;
  }

  /* Notification dropdown improvements */
  .notification-item {
    padding: 1rem;
    border-bottom: 1px solid #f8f9fc;
    transition: background-color 0.2s ease;
  }

  .notification-item:hover {
    background-color: #f8f9fc;
  }

  .notification-item:last-child {
    border-bottom: none;
  }
}
</style>
