<!-- preloader css -->
<%= stylesheet_link_tag "preloader.min", "data-turbo-track": "reload" %>

<!-- Bootstrap Css -->
<%= stylesheet_link_tag "bootstrap.min", id: "bootstrap-style", "data-turbo-track": "reload" %>
<!-- Icons Css (Fixed for Rails asset pipeline) -->
<%= stylesheet_link_tag "icons-fixed", "data-turbo-track": "reload" %>
<!-- Iconoir Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/iconoir-icons/iconoir@main/css/iconoir.css" />
<!-- App Css-->
<%= stylesheet_link_tag "app.min", id: "app-style", "data-turbo-track": "reload" %>

<!-- Default Stylesheets -->
<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

<!-- JavaScript -->
<%= javascript_include_tag "app-fixed", "data-turbo-track": "reload", defer: true %>

<!-- Page-specific Stylesheets -->
<%= yield(:stylesheets) if content_for?(:stylesheets) %>